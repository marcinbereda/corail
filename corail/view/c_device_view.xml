        <record id="action_c_device" model="ir.actions.act_window">
            <field name="name">Urządzenie</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">c.device</field>
            <field name="view_type">form</field>
	        <field name="context">{}</field>
            <field name="view_id" ref="c_device_tree"/>
             <field name="search_view_id" ref="c_device_search"/>
        </record>
		
        <menuitem action="action_c_device" id="corail_menu_service_device" parent="corail_menu_service_service" sequence="2"/>
    </data>
</openerp>
